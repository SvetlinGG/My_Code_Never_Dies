{
  "name": "Haunted Cemetery Frontend",
  "version": "1.0.0",
  "description": "Angular 18 application for a spooky portfolio website with haunted cemetery theme",
  "framework": "Angular 18",
  "language": "TypeScript",
  "styling": "CSS",
  "architecture": {
    "type": "Single Page Application (SPA)",
    "routing": "Angular Router",
    "stateManagement": "Services with RxJS",
    "httpClient": "Angular HttpClient with fetch API"
  },
  "features": {
    "pages": [
      {
        "route": "/",
        "component": "HomeComponent",
        "description": "Haunted cemetery with project tombstones",
        "features": [
          "Hero section with fog animation",
          "Project graveyard with 6 tombstones",
          "Fire effects on hover",
          "Fire sound effects (desktop only)",
          "Aged stone texture with weathering",
          "Spider web decorations"
        ]
      },
      {
        "route": "/projects/:slug",
        "component": "ProjectDetailComponent",
        "description": "Mausoleum-themed project detail page",
        "features": [
          "Stone mausoleum entrance design",
          "Project information display",
          "Tech stack badges",
          "Back navigation button"
        ]
      },
      {
        "route": "/about",
        "component": "AboutComponent",
        "description": "Catacombs of Experience - timeline page",
        "features": [
          "Vertical timeline with alternating layout",
          "Glowing timeline markers",
          "Animated content cards",
          "Experience history display"
        ]
      },
      {
        "route": "/contact",
        "component": "ContactComponent",
        "description": "Séance Room - contact form",
        "features": [
          "Mystical contact form",
          "Animated candles",
          "Form validation",
          "API integration for submissions"
        ]
      }
    ],
    "sharedComponents": [
      {
        "name": "NavigationComponent",
        "description": "Fixed header navigation with spooky theme",
        "features": ["Responsive hamburger menu", "Active route highlighting", "Floating animation"]
      },
      {
        "name": "SpiderWebComponent",
        "description": "Decorative spider web with animated spider",
        "usage": "Displayed above page titles"
      }
    ],
    "directives": [
      {
        "name": "MouseFogDirective",
        "description": "Creates smoke trail following mouse cursor",
        "platform": "Browser only (desktop)"
      },
      {
        "name": "FireSoundDirective",
        "description": "Plays fire crackling sound on hover",
        "platform": "Browser only (desktop)",
        "volume": 0.7
      }
    ],
    "services": [
      {
        "name": "ApiService",
        "description": "Handles all HTTP requests to backend API",
        "methods": [
          "getProjects(): Observable<Project[]>",
          "getProjectBySlug(slug: string): Observable<ProjectDetail>",
          "submitContact(data: ContactForm): Observable<Response>"
        ]
      }
    ]
  },
  "theme": {
    "colors": {
      "primary": "#8b0000",
      "background": "linear-gradient(to bottom, #0a0a1a, #1a1a2e, #16213e)",
      "text": "#e0e0e0",
      "accent": "#ff6600"
    },
    "fonts": {
      "primary": "Georgia, serif",
      "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto"
    },
    "effects": [
      "Fog overlay with drift animation",
      "Floating particles",
      "Custom cursors (crosshair and X)",
      "Flickering text animations",
      "Fire effects on hover",
      "Smoke trail following mouse",
      "Skull background shadows"
    ]
  },
  "performance": {
    "lazyLoading": false,
    "ssr": true,
    "prerendering": true,
    "optimization": "Production builds with AOT compilation"
  },
  "responsive": {
    "breakpoints": {
      "mobile": "≤480px",
      "tablet": "≤768px",
      "desktop": "≤1024px"
    },
    "features": [
      "Responsive grid layouts",
      "Adaptive font sizes with clamp()",
      "Touch-friendly button sizes",
      "Hamburger menu on mobile",
      "Disabled effects on mobile (smoke, fire sound)"
    ]
  },
  "dependencies": {
    "angular": "^18.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devServer": {
    "port": 5000,
    "host": "localhost"
  },
  "apiEndpoint": {
    "development": "http://localhost:3000/api",
    "production": "/api"
  }
}
